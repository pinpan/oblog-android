<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.applego.oblog.tppwatch.tppdetail.TppDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:id="@+id/detail_nca_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:visibility="@{viewmodel.isDataAvailable ? View.VISIBLE : View.GONE}">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:layout_marginTop="@dimen/tab_margin_top"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/entity_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_entity_code"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:clickable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="11sp"
                            android:text="@string/label_entity_code" />

                        <TextView
                            android:id="@+id/entity_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#006496"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:text="@{viewmodel.tpp.ncaEntity.entityCode}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/entity_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_entity_name"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:clickable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="11sp"
                            android:text="@string/label_entity_names" />

                        <TextView
                            android:id="@+id/entity_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#006496"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:text="@{viewmodel.tpp.ncaEntity.entityName}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/entity_ico_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_ico"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:clickable="false"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="11sp"
                            android:text="@string/label_entity_ico" />

                        <TextView
                            android:id="@+id/entity_ico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#006496"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:text="@{viewmodel.tpp.ncaEntity.ico}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/entity_country_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_home_country"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="@string/label_home_country"
                            android:inputType="none"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:textSize="11sp"
                            tools:text="@string/label_home_country"
                            />

                        <TextView
                            android:id="@+id/entity_home_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@{viewmodel.tpp.ncaEntity.country}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#006496"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/entity_address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_home_address"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="@string/label_home_address"
                            android:inputType="none"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:textSize="11sp"
                            tools:text="@string/label_home_address"
                            />

                        <TextView
                            android:id="@+id/entity_home_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@{viewmodel.tpp.ncaEntity._address.unstructuredAddress}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#006496"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- JERRS Doesn't have this data. CNB gets it from other registers
                var phone = ""// telefon: 224441111 Fax
                var email = "" // podatelna@moneta.cz
                var web = "" //	www.moneta.cz
            -->

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="?android:attr/listDivider"
                />

            <LinearLayout
                android:id="@+id/visas_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

    <!--
                <TextView
                    android:id="@+id/label_passports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="14sp"
                    tools:text="@string/label_passports" />
    -->
                <LinearLayout
                    android:id="@+id/visas_labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <EditText
                        android:id="@+id/label_visa_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:enabled="false"
                        android:inputType="none|textPersonName"
                        android:text="@string/label_country"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/label_visa_psd2_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:clickable="false"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:text="@string/label_roles"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/passports_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/visas_labels"
                        android:layout_marginBottom="10dp"
                        android:fadeScrollbars="false"
                        android:scrollbars="horizontal|vertical"
                        app:items="@{viewmodel.tpp.ebaEntity.ebaPassport.services}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                -->
                </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
