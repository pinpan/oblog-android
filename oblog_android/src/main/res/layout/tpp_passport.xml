<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

<!--
        <variable
            name="countryVisa"
            type="com.applego.oblog.tppwatch.data.model.EbaPassport.CountryVisa" />
-->

        <variable
            name="serviceVisa"
            type="com.applego.oblog.tppwatch.data.model.EbaPassport.ServiceVisa" />

        <!--<variable
            name="viewmodel"
            type="com.applego.oblog.tppwatch.tppdetail.TppDetailViewModel" />-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/visa_country"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@{serviceVisa.service}"
            android:textSize="11sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/visa_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textAlignment="viewStart"
            android:text="@{serviceVisa.countriesAsString}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />
    </LinearLayout>
</layout>
