<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applego.oblog.tppwatch">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission-sdk-23 android:name="android.permission.READ_CONTACTS" />

    <!--android:label="@string/app_name"-->
    <application
        android:name=".TppWatchApplication"
        android:label="@string/app_name"
        android:description="@string/label_app_description"
        android:allowBackup="false"
        android:icon="@mipmap/ic_oblog_logo"
        android:roundIcon="@mipmap/ic_oblog_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <!-- android:usesCleartextTraffic="true" : W Warning:(19, 9) Attribute `usesCleartextTraffic` is only used in API level 23 and higher (current min is 21) -->
        <activity
            android:name=".onboarding.OnboardingActivity"
            android:label="@string/title_activity_onboarding"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".tpps.TppsActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tpps.TppsActivity"
            android:label="TppWatch"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.OverlapSystemBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
                <!--<category android:name="android.intent.category.HOME"/>-->
                <!--<category android:name="android.intent.category.DEFAULT" />-->
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".preferences.OblogPreferencesActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".tpps.TppsActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.applego.oblog.tppwatch.tpps.TppsActivity" />
        </activity>
<!--
        <activity android:name=".onboarding.SignOnActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
-->
    </application>


</manifest>