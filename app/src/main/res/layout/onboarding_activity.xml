    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/dialogPreferredPadding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5pt">

            <ImageView
                android:id="@+id/intro_indicator_0"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@color/colorGrey"
                android:contentDescription="@string/indicator_image"
                android:tag="intro_indicator_0"
                />

            <ImageView
                android:id="@+id/intro_indicator_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@color/colorLightGrey"
                android:contentDescription="@string/indicator_image"
                android:tag="intro_indicator_1"
                />

            <ImageView
                android:id="@+id/intro_indicator_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@color/colorLightGrey"
                android:contentDescription="@string/indicator_image"
                android:tag="intro_indicator_2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/intro_btn_prev"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:background="@color/wallet_highlighted_text_holo_dark"
                android:enabled="false"
                android:text="@string/label_intro_prev"
                android:textColor="@android:color/white"
                tools:visibility="invisible"
                />
    <!--
                <Button
                android:layout_weight="1"
                android:paddingRight="10pt"
                android:paddingBottom="10pt"
                android:padding="5pt"
                    android:id="@+id/intro_btn_prev"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:text="Prev"
                    android:textColor="@android:color/white"
                    tools:visibility="invisible"
                    />
    -->
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="40pt"
                    />

                <Button
                    android:id="@+id/intro_btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right|end"
                    android:background="@color/wallet_highlighted_text_holo_dark"
                    android:enabled="true"
                    android:padding="5pt"
                    android:paddingRight="10pt"
                    android:paddingBottom="10pt"
                    android:text="@string/label_intro_next"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </LinearLayout>

