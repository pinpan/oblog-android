<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="countryVisa"
            type="com.applego.oblog.tppwatch.data.model.EbaPassport.CountryVisa" />

        <variable
            name="viewmodel"
            type="com.applego.oblog.tppwatch.tppdetail.TppDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/visa_country"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@{countryVisa.country}"
            android:textSize="10sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/visa_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textAlignment="viewStart"
            android:text="@{countryVisa.servicesAsString}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />
    </LinearLayout>
</layout>
